<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <TextView
        android:id="@+id/image_selection_prompt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/prompt_background"
        android:gravity="center_horizontal|bottom"
        android:textColor="@color/prompt"
        android:textSize="16dp"
        android:typeface="sans" />

    <GridView
        android:id="@+id/image_selection_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:columnWidth="140dp"
        android:gravity="center"
        android:horizontalSpacing="10dp"
        android:numColumns="auto_fit"
        android:stretchMode="columnWidth"
        android:verticalSpacing="10dp" />


    <TextView
        android:id="@+id/image_selection_prompt_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/prompt_background"
        android:gravity="center_horizontal|top"
        android:text="@string/image_prompt_comment"
        android:textColor="@color/prompt"
        android:textSize="12dp"
        android:textStyle="italic"
        android:typeface="serif" />

</LinearLayout>
