<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/viewgroup_app_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <TextView
        android:id="@+id/text_app_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/title_background"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="@color/title"
        android:textSize="12dp"
        android:typeface="sans" />

    <LinearLayout
        android:id="@+id/text_app_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/footer_background"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_app_footer_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:text="@string/link_author"
            android:textColor="@color/footer"
            android:textColorLink="@color/footer"
            android:textSize="12dp"
            android:typeface="sans" />

        <TextView
            android:id="@+id/text_app_footer_license"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:gravity="right|center_vertical"
            android:text="@string/link_license"
            android:textColor="@color/footer"
            android:textColorLink="@color/footer"
            android:textSize="12dp"
            android:typeface="sans" />
    </LinearLayout>

</RelativeLayout>